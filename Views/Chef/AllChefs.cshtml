
@{
    ViewData["Title"] = "All Chefs";
}

@model List<Chef> //data type is list of chefs and Chef is coming from Controller where we pass in Chef in the return view

<div class="container mt-4">
    <div class="card" style="border: 8px solid #ff1493;">
        <div class="card-header" style="background-color: #ff69b4; color: white;">
            <h1 class="display-4">Check out our roster of Drag Queens!</h1>
        </div>

        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Amount of Dishes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Chef n in Model)
                    {
                        <tr>
                            <td>@n.FirstName @n.LastName</td>
                            <td>@n.Age</td>
                            <td>@n.Dishes.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>